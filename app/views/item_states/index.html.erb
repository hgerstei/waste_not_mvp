<div class="page-header">
  <h1>
    Item states
    <a href="/item_states/new" class="btn btn-lg btn-success">New Item state</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @item_states.each do |item_state| %>
      <tr>
        <td>
          <% if item_state.item.present? %>
            <a href="/items/<%= item_state.item.id %>">
              <%= item_state.item.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if item_state.state.present? %>
            <a href="/states/<%= item_state.state.id %>">
              <%= item_state.state.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/item_states/<%= item_state.id %>" class="btn btn-primary">Show</a>
          <a href="/item_states/<%= item_state.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item_state/<%= item_state.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @item_states, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
