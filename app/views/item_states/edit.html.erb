<!-- Validation failure messages -->
<% if @item_state.errors.any? %>
  <% @item_state.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Item State #<%= @item_state.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_item_state/<%= @item_state.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="control-label">
          Item
        </label>

        <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name, @item_state.item_id), :class => "form-control") %>
      </div>

      <!-- Label and input for state_id -->
      <div class="form-group">
        <label for="state_id" class="control-label">
          State
        </label>

        <input type="text" id="state_id" name="state_id" placeholder="State" class="form-control" value="<%= @item_state.state_id %>">
      </div>

      <button class="btn btn-warning">
        Update Item State
      </button>
      or
      <a href="/item_states/<%= @item_state.id %>">Cancel</a>
    </form>
  </div>
</div>
