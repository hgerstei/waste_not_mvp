<div class="page-header">
  <h1>
    Recipe item states
    <a href="/recipe_item_states/new" class="btn btn-lg btn-success">New Recipe item state</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Item state</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @recipe_item_states.each do |recipe_item_state| %>
      <tr>
        <td>
          <% if recipe_item_state.recipe.present? %>
            <a href="/recipes/<%= recipe_item_state.recipe.id %>">
              <%= recipe_item_state.recipe.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if recipe_item_state.item_state.present? %>
            <a href="/item_states/<%= recipe_item_state.item_state.id %>">
              <%= recipe_item_state.item_state.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= recipe_item_state.description %></td>
        <td>
          <a href="/recipe_item_states/<%= recipe_item_state.id %>" class="btn btn-primary">Show</a>
          <a href="/recipe_item_states/<%= recipe_item_state.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipe_item_state/<%= recipe_item_state.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recipe_item_states, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
